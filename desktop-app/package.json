{
    "name": "invisible-interview-coder",
    "version": "2.0.0",
    "description": "Interview coding assistant that remains invisible during screen sharing",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.interview.genie",
        "productName": "Interview Genie",
        "directories": {
            "output": "build_output"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "keywords": [
        "interview",
        "coding",
        "assistant",
        "invisible"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.0.12"
    }
}